extends ./layouts/header

block content
    .homepage
        .cover
            .profile
                if user
                    img.avatar(src=user.avatar, alt='@nvlinh99')
                else
                    img.avatar(src='/images/avatar.jpg', alt='@nvlinh99')
            .social
                blockquote.blockquote.text-center
                    p.mb-0 "Stay hungry, stay foolish"
                    footer.blockquote-footer Steve Jobs &nbsp;
                        cite() - CEO Apple Inc.
                a(href='http://facebook.com/nvlinh99', target='_blank')
                    img.button.facebook(src='/images/fb.png', alt='Facebook')
                a(href='http://twitter.com/nvlinh99', target='_blank')
                    img.button.twitter(src='/images/twitter.png', alt='Twitter')
                a(href='http://github.com/nvlinh99', target='_blank')
                    img.button.github(src='/images/github.png', alt='GitHub')
            .card-body.text-center
                h3.card-title Công cụ giúp bạn quản lý công việc - Todo App
                p.card-text
                    if !user
                        a.btn.btn-outline-primary(href='/auth/login') Dùng ngay 
                    else
                        a.btn.btn-outline-primary(href='/todo') Dùng ngay 